@using Blazored.LocalStorage;

@inject ILocalStorageService LocalStorage
@inject AuthenticationProvider AuthProvider

<MudDrawer Open="true" Variant="DrawerVariant.Persistent" Color="Color.Primary" Style="position: fixed;">
	<MudDrawerHeader>
		<MudText Typo="Typo.h5">EuroConnector</MudText>
	</MudDrawerHeader>
	<MudNavMenu Color="Color.Secondary" Bordered="true" Style="display: flex; height: 100%; flex-direction: column;">
		<AuthorizeView Roles="User, Admin, ErpAdmin">
			<Authorized>
				<MudNavLink Href="/" Match="NavLinkMatch.All" Icon="fa-solid fa-house" IconColor="Color.Inherit">Home</MudNavLink>
				<MudNavLink Href="/inbox" Match="NavLinkMatch.All" Icon="fa-solid fa-file" IconColor="Color.Inherit">Inbox</MudNavLink>
				<MudNavLink Href="/outbox" Match="NavLinkMatch.All" Icon="fa-solid fa-file" IconColor="Color.Inherit">Outbox</MudNavLink>
				<MudNavLink Href="/about" Match="NavLinkMatch.All" Icon="fa-solid fa-info-circle" IconColor="Color.Inherit">About</MudNavLink>
			</Authorized>
			<NotAuthorized>
				<MudNavLink Href="/setup" Match="NavLinkMatch.All" Icon="fa-solid fa-cog" IconColor="Color.Inherit">Setup</MudNavLink>
			</NotAuthorized>
		</AuthorizeView>
	</MudNavMenu>
</MudDrawer>

