@page "/outbox"
@using System.Reflection

@attribute [Authorize]

<MudText Typo="Typo.h3">Outbox</MudText>

<DocumentSearchList FolderName="outbox" LocalPath="@path"/>

@code {
    string path;

    protected override void OnInitialized()
    {
        path = Preferences.Get("outboxPath", string.Empty, Assembly.GetExecutingAssembly().Location);
    }
}
