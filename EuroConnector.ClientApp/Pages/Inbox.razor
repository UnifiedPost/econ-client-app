@page "/inbox"
@using Blazored.LocalStorage;

@inject ILocalStorageService LocalStorage;

@attribute [Authorize]

<MudText Typo="Typo.h3">Inbox</MudText>

<MudText>Documents will be downloaded to: @path</MudText>
<ReceivedDocumentList/>

@code {
    string path;

    protected override async Task OnInitializedAsync()
    {
        path = await LocalStorage.GetItemAsync<string>("inboxPath");
    }
}
